<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/north_with_house"
    tools:context=".EndGameActivity">

    <RelativeLayout
        android:id="@+id/panel_endGame"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/panel_LBL_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:text="ðŸŒ¹ GAME OVER ðŸŒ¹"
            android:textAlignment="center"
            android:textColor="#DA0303"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/panel_BTN_submit"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_LBL_submitName"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:text="SUBMIT"
            android:textColor="#DA0303"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/panel_LBL_submitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panel_LBL_end"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="cursive"
            android:text="ðŸŽ… ENTER NAME ðŸ¤¶"
            android:textColor="#DA0303"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/flake1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/panel_BTN_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/gift" />
        <ImageView
            android:id="@+id/flake2"
            android:layout_marginTop="24dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/panel_BTN_submit"
            android:layout_toRightOf="@id/flake1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/christmas_tree"
            />

        <ImageView
            android:id="@+id/flake3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/panel_BTN_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@id/flake1"
            android:src="@drawable/bauble" />




    </RelativeLayout>

</RelativeLayout>